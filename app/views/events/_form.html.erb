 <%= simple_nested_form_for @event, :html => { :class => 'form-horizontal' } do |event_form| %>
    <div class="row">
      <div class="span7">
        <fieldset>
          <legend><%= controller.action_name.capitalize %> Event</legend>
          <%= render :partial => "event_fields", :locals => { :f => event_form } %>
        </fieldset>
      </div>

    <div class="span5">
      <legend>Date for this event</legend>
        <div id="event_e_date">
          <%= event_form.simple_fields_for :e_dates do |e_date_form| %>
            <%= render :partial => "e_date_fields", :locals => { :f => e_date_form } %>
          <% end %> 
          <p>
            <br /><%= event_form.link_to_add("Add date", :e_dates, :class => 'button tiny') %>
          </p>
        </div> 
      </div>
    </div>
    <div class="form-actions">
      <%= event_form.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', events_path, :class => 'button secondary' %>
    </div>
  <% end %>
